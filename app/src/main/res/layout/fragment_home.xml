<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment"
    android:background="@color/homecolor"
    android:orientation="vertical">

<LinearLayout
    android:id="@+id/layout_user_information"
    android:layout_width= "match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:weightSum="4"
    android:padding="8dp"
    android:background="@color/colorButton"
    tools:ignore="Orientation">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src = "@drawable/ic_account_circle_white_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp">

        <TextView
            android:text="Abilash S"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:id="@+id/txt_user_name"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_member_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="normal"
            android:textColor="@color/white"
            android:textSize="16dp"/>




    </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="8dp">

        <androidx.cardview.widget.CardView

            android:id = "@+id/card_view_booking"
            android:layout_marginRight="8dp"
            xmlns:tools="http://schemas.android.com/tools"
            app:cardCornerRadius="8dp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height= "wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:src = "@drawable/ic_event_note_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking"
                    android:layout_gravity="center_horizontal"/>




            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id = "@+id/card_view_cart"
            android:layout_marginRight="8dp"
            xmlns:tools="http://schemas.android.com/tools"
            app:cardCornerRadius="8dp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height= "wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:src = "@drawable/ic_shopping_cart_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cart"
                    android:layout_gravity="center_horizontal"/>





            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id = "@+id/card_view_history"
            android:layout_marginRight="8dp"
            xmlns:tools="http://schemas.android.com/tools"
            app:cardCornerRadius="8dp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height= "wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:src = "@drawable/ic_history_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:layout_gravity="center_horizontal"/>




            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id = "@+id/card_view_notification"
            android:layout_marginRight="8dp"
            xmlns:tools="http://schemas.android.com/tools"
            app:cardCornerRadius="8dp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height= "wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:src = "@drawable/ic_notifications_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="notificatio"
                    android:layout_gravity="center_horizontal"/>




            </LinearLayout>



        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <ss.com.bannerslider.Slider
            android:id="@+id/banner_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height= "wrap_content"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity= "center_vertical"
                android:text="Look Book"
                android:textSize="18sp"
                android:textColor="@color/colorButton"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_look_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"/>




    </LinearLayout>


</LinearLayout>